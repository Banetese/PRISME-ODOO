<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_line_form_prisme" model="ir.ui.view">
            <field name="name">purchase.order.line.form.prisme</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/> 
            <field name="arch" type="xml">
                <page string="History" position="after">
                    <page string="blanket">
                        <field name="blanket_line_prisme_ids" widget="one2many">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="delivery_date"/>
                                <field name="stock_picking_id"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>
        
        <record id="purchase_order_prisme" model="ir.ui.view">
            <field name="name">purchase.order.prisme</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <button name="recalc_blanket" icon="terp-stock_format-scientific" string="Refresh blanket"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>



