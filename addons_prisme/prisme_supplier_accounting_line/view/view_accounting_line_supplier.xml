<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	
		<record id="prisme_accountline_supplier_tree" model="ir.ui.view">
            <field name="name">prisme.accountline.supplier.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
				<tree string="Lignes de factures fournisseurs" create="false">
					<field name="invoice_id"/>
					<field name="partner_id"/>
					<field name="origin"/>
					<field name="product_id"/>
					<field name="name"/>
					<field name="account_id"/>
					<field name="price_unit"/>
					<field name="quantity"/>
					<field name="price_subtotal"/>
					<field name="currency_id"/>
					<field name="journal_id"/>
					<field name="analytic_journal"/>
					<field name="invoice_line_tax_id"/>
				</tree>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="prisme_accountline_supplier">
			<field name="name">Lignes de factures fournisseurs</field>
			<field name="res_model">account.invoice.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('invoice_id.type','in',['in_invoice','in_refund'])]</field>
			<field name="view_id" ref="prisme_accountline_supplier_tree"/>
		</record>
		
		<!-- Menu -->
		<menuitem name="Lignes de factures fournisseurs" id="menu_prisme_account_line_supplier" parent="account.menu_finance_payables" sequence="10" action="prisme_accountline_supplier"/>
		
		
		<!-- Supplier accounting lines Search View -->
		<record model="ir.ui.view" id="search_view_prisme_accountline_supplier_tree">
			<field name="name">prisme.accountline.supplier.tree</field>
			<field name="model">account.invoice.line</field>
	        <field name="arch" type="xml">
	            <search string="Supplier accounting Line">
					<group expand="0" string="Group By">
						<filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
						<filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
						<filter string="Account" domain="[]" context="{'group_by':'account_id'}"/>
						
						<filter string="Currency" domain="[]" context="{'group_by':'currency_id'}"/>
						<filter string="Journal" domain="[]" context="{'group_by':'journal_id'}"/>
						<filter string="Journal Analytique" domain="[]" context="{'group_by':'analytic_journal'}"/>
	
					</group>
				</search>
	        </field>
    	</record>
		
    </data>
</openerp>
