<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <report
        id="report_project"
        model="project.project"
        string="Project Report"
        name="prisme_project_report.report_project_view"
        file="prisme_project_report.report_project"
        report_type="qweb-pdf" />

    <template id="report_project_view">
	    <t t-name="prisme_project_report.report_project_view">
	        <t t-call="report.html_container">
	            <t t-foreach="docs" t-as="doc">
	                <t t-call="report.external_layout">
	                    <div class="page">
	                        <h1><span t-field="doc.name"/></h1>
	                        
	                        <p><b>Customer</b><br/>
	                        <span t-field="doc.partner_id.name"/></p>
	                        
	                        <p><b>Customer reference</b><br/>
	                        <span t-field="doc.partner_id.ref"/></p>
	                        
	                        <p><b>Reference</b><br/>
	                        <span t-field="doc.code"/></p>
	                        
	                        <t t-foreach="doc.sale_orders" t-as="so">
	                        	
	                       		<p><b>Sale order Date</b><br/>
	                        	<span t-field="so.date_order"/></p>
	                        	
	                        	<hr width="90%" color="black"/>
	                        	
	                        	<t t-foreach="so.order_line" t-as="order_line">
	                    			<p><span t-field="order_line.product_uom_qty"/> <span t-field="order_line.name"/></p>
	                        	</t>   
	
	                        </t>
	                        
							<hr width="75%" color="black"/>
	                        
	                        <t t-foreach="doc.purchase_orders" t-as="po">
	                        	<p><b><span t-field="po.partner_id.name"/> <span t-field="po.name"/> tel: <span t-field="po.partner_id.phone"/> </b></p>
	                        	
	                        	<t t-foreach="po.order_line" t-as="order_line">
	                        		<p><span t-field="order_line.product_id.name"/> Order Date: <span t-field="order_line.date_order"/> Delivery Date: <span t-field="order_line.date_planned"/></p>
	                        		<p><span t-field="order_line.name"/></p>
	                        		<p>Quantity: <span t-field="order_line.product_qty"/> Frs. <span t-field="order_line.price_subtotal"/> </p>
	                        		<br/>
	                        	</t>
	                        	<br/>
	                        	
	                        </t>
	                        
	                    </div>
	                </t>
	            </t>
	        </t>
	    </t>
    </template>
</data>
</openerp>