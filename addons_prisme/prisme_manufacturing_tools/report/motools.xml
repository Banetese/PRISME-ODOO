<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  
        <!--definition header and footer -->
         <record id="ir_header_webkit_prisme" model="ir.header_webkit">
            <field name="name">Base sample prisme</field>
            <field name="format">A4</field>
           <field name="orientation">Landscape</field>
           <field name="margin_right">0</field>
           <field name="margin_top">0</field>
           <field name="margin_left">0</field>
           <field name="margin_bottom">0</field>
           <field name="footer_html"><![CDATA[<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
                }
            }
        </script>
    </head>
    <body style="border:0; margin: 0;" onload="subst()">
        <table style="border-top: 1px solid black; width: 100%">
            <tr >
                <td style="text-align:right;font-size:12;" width="95%">Page <span class="page"/></td><td style="text-align:left;font-size:12;"> / <span class="topage"/></td>
            </tr>
        </table>
    </body>
</html>
           ]]></field>
           <field name="html"><![CDATA[<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
                }
            }
        </script>
        <style type="text/css">
            ${css}
        </style>
    </head>
    <body style="border:0; margin: 0;" onload="subst()">
        <table style="border-top: 0px solid black; width: 100%">
            <tr >
                <td style="text-align:right;font-size:12;" width="95%">Page <span class="page"/></td><td style="text-align:left;font-size:12;"> / <span class="topage"/></td>
            </tr>
        </table>
</body>
        </html>

               
               ]]></field>
           <!--Create Report-->
        </record>
    <report auto="True" 
        id="report_mo_tools_prisme" 
        model="mrp.production.workcenter.line" 
        name="mo_tools"  
        file="prisme_manufacturing_tools/report/motools.mako" 
        string="MO Operations unfinished with tools" 
        report_type="webkit" 
        />
        <!--Add the header/footer at report-->
     <record id="prisme_manufacturing_tools.report_mo_tools_prisme" model="ir.actions.report.xml">
        <field name="webkit_header" ref="ir_header_webkit_prisme" />
    </record>
<!-- To create the buton ...-->
        <record id="menu_xml_buton_mo_tools" model="ir.ui.menu">
            <field name="name">Report MO unfinish with tools</field>
            <field eval="'ir.actions.report.xml,%d'%report_mo_tools_prisme" name="action"/>
            <field name="sequence" eval="100"/>
            <field eval="'STOCK_PRINT'" name="icon"/>
            <field name="parent_id" ref="base.menu_mrp_root"/>
        </record>
           
    </data>
</openerp>
