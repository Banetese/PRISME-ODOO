<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!--Production Line -->
        <record id="prisme_stock_move_product_mrp_view_tree" model="ir.ui.view">
            <field name="name">prisme.stock.move.product.mrp.view.tree</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
				<tree string="Composants de fabrication">
					<field name="raw_material_production_id"/>
					<field name="date_planned"/>
					<field name="product_final_id"/>
					<field name="product_qty_final"/>
					<field name="product_uom_final"/>
					<field name="product_id"/>
					<field name="product_uom_qty"/>
					<field name="product_uom"/>
					<field name="state" invisible="1"/>
				</tree>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="prisme_stock_move_product_mrp">
			<field name="name">Composants de fabrication</field>
			<field name="res_model">stock.move</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="prisme_stock_move_product_mrp_view_tree"/>
			<field name="domain">[('raw_material_production_id','!=',False)]</field>
		</record>
		
		<!-- Menu -->
		<menuitem name="Composants de fabrication" id="menu_prisme_stock_move_product_mrp" parent="mrp.menu_mrp_manufacturing" sequence="12" action="prisme_stock_move_product_mrp"/>
		
	
    </data>
</openerp>
