<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	
		<record id="prisme_accountline_client_tree" model="ir.ui.view">
            <field name="name">prisme.accountline.client.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
				<tree string="Lignes de factures clients" create="false">
					<field name="invoice_id"/>
					<field name="partner_id"/>
					<field name="origin"/>
					<field name="product_id"/>
					<field name="name"/>
					<field name="account_id"/>
					<field name="price_unit"/>
					<field name="quantity"/>
					<field name="price_subtotal"/>
					<field name="currency_id"/>
					<field name="journal_id"/>
					<field name="analytic_journal_id"/>
					<field name="invoice_line_tax_id"/>
				</tree>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="prisme_accountline_client">
			<field name="name">Lignes de factures clients</field>
			<field name="res_model">account.invoice.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('invoice_id.type','=',['out_invoice','out_refund'])]</field>
			<field name="view_id" ref="prisme_accountline_client_tree"/>
		</record>
		
		<!-- Menu -->
		<menuitem name="Lignes de factures clients" id="menu_prisme_account_line_client" parent="account.menu_finance_receivables" sequence="10" action="prisme_accountline_client"/>
    </data>
</openerp>
