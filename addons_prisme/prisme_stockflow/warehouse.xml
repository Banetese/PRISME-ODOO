<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_warehouse_prisme" model="ir.ui.view">
			<field name="name">stock.warehouse.prisme</field>
			<field name="model">stock.warehouse</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_warehouse" />
			<field name="arch" type="xml">
				<field name="partner_address_id" position="after">
					<group col="5" colspan="6">
						<separator string="MO Component" colspan="1" />
						<separator string="Source Location" colspan="2" />
						<separator string="Target Location" colspan="2" />

						<label string="Picking" colspan="1" />
						<label string="Item Storage Location" colspan="2" help="Take the location defined on the product (Storage Location). If there is none, take the location defined in the MO (Raw Materials Location)."/>
						<field name="mo_cons_location" colspan="2" nolabel="1" />

						<label string="Issue" colspan="1" />
						<field name="mo_cons_location_2" colspan="2" nolabel="1" />
						<label string="Item Virtual Prod Location" colspan="2" help="Take the location defined on the product (Production Location)."/>


						<separator string="MO Finished Product" colspan="1" />
						<separator string="Source Location" colspan="2" />
						<separator string="Target Location" colspan="2" />

						<label string="Production Entry" colspan="1" />
						<label string="Item Virtual Prod Location" colspan="2" help="See Item Virtual Prod Location in MO Component"/>
						<label string="Item Shopfloor Entry" colspan="2" help="Take the location defined on the product (Shopfloor Location). If there is none, take the location defined in the MO (Finished Products Location)."/>
						
						<label string="Stock" colspan="1" />
						<label string="Item Shopfloor Entry" colspan="2" help="See Item Shopfloor Entry"/>
						<label string="Item Storage Location" colspan="2" help="See Item Storage Location in MO Component"/>


						<separator string="Sales Order" colspan="1" />
						<separator string="Source Location" colspan="2" />
						<separator string="Target Location" colspan="2" />

						<label string="Picking" colspan="1" align="0.0" />
						<label string="Item Storage Location" colspan="2" help="See Item Storage Location in MO COmponent." />
						<field name="lot_output_id_2" colspan="2" nolabel="1" />

						<label string="Delivery" colspan="1" align="0.0" />
						<field name="lot_output_id_3" colspan="2" nolabel="1" />
						<field name="so_picking_dest" colspan="2" nolabel="1" />
					</group>
				</field>
			</field>
		</record>
	</data>
</openerp>
