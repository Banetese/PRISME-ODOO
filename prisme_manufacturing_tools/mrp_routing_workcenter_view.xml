<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="mrp_routing_workcenter_form_prisme" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.prisme</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/> 
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='company_id']" position="after">
                    <field name="tool_product_id"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_form_view_prisme" model="ir.ui.view">
            <field name="name">mrp.production.form.view.prisme</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='workcenter_lines']/form/field[@name='hour']" position="after">
                    <field name="tool_product_id"/>
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='workcenter_lines']/tree/field[@name='hour']" position="after">
                    <field name="tool_product_id"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_workcenter_line_prisme" model="ir.ui.view">
            <field name="name">mrp.production.workcenter.line.form.prisme</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="inherit_id" ref="mrp_operations.mrp_production_workcenter_form_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/group[1]/field[@name='date_planned_end']" position="after">
                    <field name="tool_product_id"/>
                </xpath>
                <xpath expr="/form/notebook/page/group[1]/field[@name='tool_product_id']" position="after">
                    <field name="reserved"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>