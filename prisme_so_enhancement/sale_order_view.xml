<?xml version="1.0"?>
<openerp>
	<data>
        <record model="ir.ui.view" id="sale_order_form_sale_layout_prisme">
			<field name="name">sale.order.form.sale.layout.prisme</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale_layout.view_order_form_inherit_1"/>
			<field name="type">form</field>
			<field name="priority">35</field>
			<field name="arch" type="xml">
			    <field name="pricelist_id" position="after">
			        <field name="rounding_on_subtotal" />
			    </field>
			    
				<field name="delay" position="after">
					<field name="date_delivery" />
				</field>
				
				<xpath expr="/form/notebook/page/field//form/notebook/page/group[last()]" position="after">
					<separator colspan="4" string="Refusal"/>
					<field name="refused" />
					<field name="refusal_reason" string="Reason"/>
				</xpath>
				<xpath expr="/form/notebook/page/field/tree/field[last()]" position="after">
				    <field name="refused" />
				</xpath>
				
				<field name="discount" position="after">
					<field name="discount_type" />
				</field>
			</field>
		</record>
		
		<record model="ir.ui.view" id="sale_order_form_prisme">
			<field name="name">sale.order.form.prisme</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
			    <xpath expr="/form/notebook/page/separator[@string='Notes']" position="before">
			        <group colspan="2" col="2" groups="base.group_extended">
			            <separator string="Quotation Validity" colspan="2"/>
			            <field name="quotation_validity" />
			            <field name="quotation_comment" />
			        </group>
			        
			        <group colspan="2" col="2" groups="base.group_extended">
			        	<separator string="Cancellation" colspan="2"/>
			            <field name="cancellation_reason" string="Reason"/>
			        </group>
			    </xpath>
			</field>
		</record>
		
		<record model="ir.ui.view" id="sale_order_tree_prisme">
			<field name="name">sale.order.tree.prisme</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree"/>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			    <field name="partner_id" position="before">
			    	<field name="client_order_ref" />
			    </field>
			</field>
		</record>
	</data>
	
</openerp>